source "https://rubygems.org"

gem "github-pages", group: :jekyll_plugins

# Windows 特定依赖
gem "tzinfo"
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw]
gem "webrick"
gem "wdm", "~> 0.1.0"

# 可选插件
group :jekyll_plugins do
    gem "jekyll-paginate"
    gem "jemoji"
    gem "jekyll-sitemap"
end
